    <script>
        const addtourltitle = () => {
            const url = document.getElementById('url').value
            let data1 = document.getElementById('inputtitle').value;
            if (url.indexOf("?title=") >= 0) {
                alert("can't use same query for multiple times")
            }
            else {
                document.getElementById('url').value += `?title=${data1}`;
                console.log("added")
            }


        }
        const addtourlfields = () => {
            const url = document.getElementById('url').value
            let data = document.getElementById('inputfields').value;
            if (url.indexOf("?fields=") >= 0) {
                alert("can't use same query for multiple times")
            }
            else {
                document.getElementById('url').value += `?fields=${data}`;
                console.log("added")
            }


        }
        const addtourlcategory = () => {
            const url = document.getElementById('url').value
            let data = document.getElementById('categoryinput').value;
            if (url.indexOf("?category=") >= 0) {
                alert("can't use same query for multiple times")
            }
            else {
                document.getElementById('url').value += `?category=${data}`;
                console.log("added")
            }

        }
        const testapi = ()=>{
            const url = document.getElementById('url').value;
            window.open('url')
        }

    </script>
