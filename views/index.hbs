    <div class="decumentation" id="docarea">
        <h2 class="mt-3">Documentation</h2>
        <div class="container">


            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Query Name</th>
                        <th scope="col">Use</th>
                        <th scope="col">Add to url</th>
                        <!-- <th scope="col">Handle</th> -->
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <!-- <th scope="row"></th> -->
                        <td>title</td>
                        <td>Use in the url to search for recipies of a specific name</td>
                        <!-- <td onclick="addtourl('?title=chicken')">+</td> -->
                        <td class="d-flex"><input type="text" id="inputtitle" value=""
                                placeholder="Enter, title ex:chicken" class="form-control form-control-sm inputs" />
                            <p class="plus"  onclick="addtourltitle()">+</p>
                        </td>
                    </tr>
                    <tr>
                        <!-- <th scope="row"></th> -->
                        <td>fields</td>
                        <td>Get only those fields in your results you have selected</td>
                        <td class="d-flex"><input type="text" id="inputfields" value=""
                                placeholder="fields , ex:title,category"
                                class="form-control form-control-sm inputfields inputs" />
                            <p class="plus" onclick="addtourlfields()">+</p>
                        </td>
                    </tr>
                    <tr>
                        <!-- <th scope="row"></th> -->
                        <td>category</td>
                        <td>Only recipies of selected category will appear in the result</td>
                        <!-- <td class="d-flex"><input type="text" id="formControlSm" class="form-control form-control-sm" />+</td> -->
                        <td class="d-flex ">

                            <select id="categoryinput" class="form-select categoryinput inputs"
                                aria-label="Default select example">
                                <option selected>Open this select menu</option>
                                <option value="veg">Veg</option>
                                <option value="nonveg">NonVeg</option>
                                <option value="vegan">Vegan</option>
                            </select>
                            <p class="plus" onclick="addtourlcategory()">+</p>
                        </td>
                    </tr>
                </tbody>
            </table>
            <hr>
            <hr>
            <p>Categories available : 1) veg , 2)Non Veg , 3)Vegan</p>

